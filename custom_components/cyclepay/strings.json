{
  "config": {
    "abort": {
      "already_configured": "Account is already configured"
    },
    "error": {
      "cannot_connect": "[%key:common::config_flow::error::cannot_connect%]",
      "invalid_auth": "[%key:common::config_flow::error::invalid_auth%]",
      "unknown": "[%key:common::config_flow::error::unknown%]"
    },
    "step": {
      "user": {
        "data": {
          "username": "[%key:common::config_flow::data::username%]",
          "password": "[%key:common::config_flow::data::password%]"
        }
      }
    }
  },
  "options": {
    "step": {
      "init": {
        "data": {
          "full_dryer_load_swipes": "Preferred Dryer Cycle Topoff Swipes"
        },
        "description": "Number of topoff swipes required for your preferred \"full\" dryer cycle. For dryers with a 30 min base time and 5 minute topoffs, enter \"6\" for a one hour load. (This would automate the six 5-minute topoff swipes for a one hour cycle.)"
      }
    }
  }
}
